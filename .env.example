# Root Level Environment Template
# Copy this to /backend/.env and fill in the values before deployment

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
PORT=5000

# Database (PostgreSQL recommended for production)
# Format: postgresql://username:password@hostname:5432/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/nano_test_platform

# Generate these with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_secret_key_32_chars_minimum
SECRET_KEY=your_secret_key_32_chars_minimum

# Frontend URL (set to your domain in production)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Optional: For file uploads limit (in MB)
MAX_CONTENT_LENGTH=50
