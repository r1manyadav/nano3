# Production Environment Configuration
# Copy this to .env.production and fill in the values

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
FLASK_DEBUG=0

# Server Configuration
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000
WORKERS=4

# Security - CHANGE THESE TO RANDOM VALUES!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=YOUR_SECURE_RANDOM_KEY_HERE_64_CHARS_MIN
JWT_SECRET_KEY=YOUR_SECURE_JWT_KEY_HERE_64_CHARS_MIN

# Database Configuration
# For SQLite (development/small deployments):
# DATABASE_URL=sqlite:////var/www/nano_test_platform/instance/nano_test_platform.db

# For PostgreSQL (recommended for production):
DATABASE_URL=postgresql://username:password@hostname:5432/nano_test_platform

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/nano_test_platform/app.log

# CORS Settings (be specific for production, not *)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# External Services (if any)
# SENTRY_DSN=https://your-sentry-key@sentry.io/project-id
# EMAIL_SERVICE=sendgrid
# EMAIL_API_KEY=your_sendgrid_api_key

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_IMAGE_UPLOAD=true
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
